{
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/sitemap.xml"
    },
    {
      "source": "/robots.txt",
      "destination": "/robots.txt"
    },
    { "source": "/news/:slug", "destination": "/api/news/:slug" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "redirects": [
    {
      "source": "/api/news",
      "destination": "/news",
      "permanent": false
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
