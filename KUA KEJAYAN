function LoginSection() {
  const [u, setU] = useState("");
  const [p, setP] = useState("");
  const [err, setErr] = useState("");
  const DRIVE_URL = "https://drive.google.com/drive/folders/1oLNrd9SUhTxvm0hAgQ5NuDZ8xIKxIDDW?usp=sharing";
  const handleSubmit = (e) => {
    e.preventDefault();
    if (u === "3514061" && p === "KEJAYAN67172") {
      window.location.href = DRIVE_URL;
    } else {
      setErr("Username atau password salah.");
    }
  };
  return (
    <section id="login" className="bg-white py-12">
      <div className="mx-auto max-w-7xl px-4">
        <h2 className="text-2xl font-bold">Login Arsip</h2>
        <p className="mt-1 text-gray-600">Masuk untuk mengakses folder arsip (Google Drive).</p>
        <form onSubmit={handleSubmit} className="mt-6 max-w-md space-y-3">
          <input value={u} onChange={(e)=>setU(e.target.value)} placeholder="Username" className="w-full rounded-2xl border px-4 py-3 outline-none focus:ring-2 focus:ring-emerald-600" />
          <input type="password" value={p} onChange={(e)=>setP(e.target.value)} placeholder="Password" className="w-full rounded-2xl border px-4 py-3 outline-none focus:ring-2 focus:ring-emerald-600" />
          {err && <div className="text-sm text-red-600">{err}</div>}
          <button className="rounded-2xl bg-emerald-600 px-4 py-3 text-sm font-semibold text-white hover:bg-emerald-700">Login</button>
          <div className="text-xs text-gray-500">Catatan: Proteksi ini bersifat dasar (client-side). Untuk keamanan produksi, gunakan Basic Auth via Vercel Middleware.</div>
        </form>
      </div>
    </section>
  );
}

function JadwalSholat() {
  const [data, setData] = React.useState(null);
  const [err, setErr] = React.useState("");
  React.useEffect(() => {
    const url = "https://api.aladhan.com/v1/timingsByCity?city=Pasuruan&country=Indonesia&method=20";
    fetch(url)
      .then((r) => r.json())
      .then((json) => {
        if (json && json.data) setData(json.data);
        else setErr("Gagal memuat jadwal.");
      })
      .catch(() => setErr("Gagal memuat jadwal."));
  }, []);
  const timings = data?.timings || {};
  const date = data?.date?.readable;
  const hijri = data?.date?.hijri?.date;
  const rows = [
    ["Subuh", timings.Fajr],
    ["Terbit", timings.Sunrise],
    ["Zuhur", timings.Dhuhr],
    ["Asar", timings.Asr],
    ["Maghrib", timings.Maghrib],
    ["Isya", timings.Isha],
  ];
  return (
    <section id="shalat" className="bg-white py-12">
      <div className="mx-auto max-w-7xl px-4">
        <h2 className="text-2xl font-bold">Jadwal Sholat ‚Äì Pasuruan</h2>
        <p className="mt-1 text-gray-600">Sumber: Aladhan API ({date} / Hijriah {hijri})</p>
        {err && <div className="mt-4 rounded-xl bg-red-50 p-3 text-sm text-red-700">{err}</div>}
        <div className="mt-6 overflow-hidden rounded-3xl border">
          <table className="min-w-full divide-y divide-gray-200 text-sm">
            <thead className="bg-gray-50">
              <tr>
                <th className="px-4 py-3 text-left font-semibold">Waktu</th>
                <th className="px-4 py-3 text-left font-semibold">Jam</th>
              </tr>
            </thead>
            <tbody className="divide-y divide-gray-100 bg-white">
              {rows.map((r, i) => (
                <tr key={i}>
                  <td className="px-4 py-3">{r[0]}</td>
                  <td className="px-4 py-3">{r[1] || "‚Äî"}</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </section>
  );
}

function Footer() {
  return (
    <footer className="border-t bg-white">
      <div className="mx-auto flex max-w-7xl flex-col items-center justify-between gap-3 px-4 py-6 md:flex-row">
        <div className="text-sm text-gray-600">¬© {new Date().getFullYear()} {BRAND.name}. Semua hak dilindungi.</div>
        <div className="flex gap-4 text-sm">
          <a href="#profil" className="hover:underline">Profil</a>
          <a href="#layanan" className="hover:underline">Layanan</a>
          <a href="#berita" className="hover:underline">Berita</a>
          <a href="#kontak" className="hover:underline">Kontak</a>
        </div>
      </div>
    </footer>
  );
}

