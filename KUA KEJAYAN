function Statistik() {
  const total = useMemo(() => STATS.reduce((a, b) => a + (b.nikah || 0), 0), []);
  return (
    <section id="statistik" className="bg-white py-12">
      <div className="mx-auto max-w-7xl px-4">
        <div className="flex items-end justify-between">
          <div>
            <h2 className="text-2xl font-bold">Statistik Pernikahan</h2>
            <p className="mt-1 text-gray-600">Rekap sederhana (contoh data)</p>
          </div>
          <div className="rounded-2xl bg-emerald-600 px-4 py-2 text-sm font-semibold text-white">
            Total {total}
          </div>
        </div>
        <div className="mt-6 overflow-hidden rounded-3xl border">
          <table className="min-w-full divide-y divide-gray-200 text-sm">
            <thead className="bg-gray-50">
              <tr>
                <th className="px-4 py-3 text-left font-semibold">Desa</th>
                <th className="px-4 py-3 text-left font-semibold">Tahun</th>
                <th className="px-4 py-3 text-left font-semibold">Jumlah Nikah</th>
              </tr>
            </thead>
            <tbody className="divide-y divide-gray-100 bg-white">
              {STATS.map((r, i) => (
                <tr key={i}>
                  <td className="px-4 py-3">{r.desa}</td>
                  <td className="px-4 py-3">{r.tahun}</td>
                  <td className="px-4 py-3">{r.nikah}</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </section>
  );
}

