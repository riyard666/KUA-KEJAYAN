function Navbar() {
  const [open, setOpen] = useState(-1);
  return (
    <header className="sticky top-0 z-50 w-full border-b bg-white/80 backdrop-blur">
      <div className="mx-auto flex max-w-7xl items-center justify-between px-4 py-3">
        <a href="#home" className="flex items-center gap-3">
          <div className="h-10 w-10 rounded-xl bg-emerald-600" />
          <div>
            <div className="text-lg font-bold">{BRAND.name}</div>
            <div className="text-xs text-gray-500">{BRAND.sub}</div>
          </div>
        </a>
        <nav className="hidden gap-4 md:flex">
          {NAV.map((item, idx) => (
            <div
              key={idx}
              className="relative"
              onMouseEnter={() => setOpen(idx)}
              onMouseLeave={() => setOpen(-1)}
            >
              {item.items ? (
                <>
                  <button className="rounded-xl px-3 py-2 text-sm font-medium hover:bg-gray-100">
                    {item.label}
                  </button>
                  {open === idx && (
                    <div className="absolute left-0 mt-1 w-64 rounded-2xl border bg-white p-2 shadow-xl">
                      {item.items.map((sub, sidx) => (
                        <a
                          key={sidx}
                          href={sub.href}
                          className="block rounded-xl px-3 py-2 text-sm hover:bg-gray-50"
                        >
                          {sub.label}
                        </a>
                      ))}
                    </div>
                  )}
                </>
              ) : (
                <a
                  href={item.href}
                  className="rounded-xl px-3 py-2 text-sm font-medium hover:bg-gray-100"
                >
                  {item.label}
                </a>
              )}
            </div>
          ))}
        </nav>
      </div>
    </header>
  );
}

